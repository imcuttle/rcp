{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./packages/**/*"],
  "exclude": ["node_modules", "test", "__tests__"]
}
