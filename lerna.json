{
  "packages": ["packages/*"],
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "ignoreChanges": ["**/*.js", "**/__fixtures__/**", "**/__tests__/**", "**/*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "version": "independent",
  "lerna": "2.7.1"
}
